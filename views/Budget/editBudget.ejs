<%- include ('../parts/header')%>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <%- messages('messages',locals)%> 

                        <% if (errors) {%>
                            <% errors.forEach(function(error) { %>
                                <div class="alert alert-danger">
                                    <%= error.msg %>
                                </div>
                            <% });%>
                        <% }%>
                       
                        <h1 class="text-center mt-4">Editar presupuesto</h1>

                        <a href="/" class="btn btn-primary">Regresar a ver todos los presupuestos</a>

                        <form method="POST" class="mt-3" action="/budget/editBudget/<%= id_Budget %>">

                            


                            <div class="form-group mt-3">
                                <label for="" class="fw-bold">Fecha de creación</label>
                                
                                <input type="datetime" class="form-control" id="datetimepicker" name="fechaCreacion" value="<%= creationDate %>" placeholder="Fecha de creación del presupuesto">
                     
                                </div>

                    
                            <div class="form-group mt-3">
                                <label for="" class="fw-bold">Proyecto</label>
                                <input type="text" class="form-control" name="proyecto" value="<%= proyect %>" placeholder="Especificación del Proyecto al que pertenece el presupuesto.">
                            </div>
                    
                            <div class="form-group mt-3">
                                <label for="" class="fw-bold">Versiones</label>
                                <input type="number" class="form-control" name="version" value="<%= version %>"  placeholder="Especificación de la última versión registrada">
                            </div>
                    
                       
                           
                    
                           
                            <button type="submit" class="btn btn-primary mt-3">Editar</button>
                          </form>
                        
                       
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
       
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="/js/scripts.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
        <script src="/js/datatables-simple-demo.js"></script>


        <script src="/libs/js/jquery.datetimepicker.full.min.js"></script> 
       




    </body>
    


</html>
