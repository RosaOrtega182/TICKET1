<%- include ('./parts/header')%>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Presupuestos</h1>
                      
                        <a href="/presupuestos/addPresupuesto" class="btn btn-primary">Agregar un nuevo presupuesto</a>

                      
                        <div class="card mt-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                DataTable Presupuestos
                            </div>

                            <div class="card-body">
                                <% if (cantidad > 0) { %>
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>Id Presupuesto</th>
                                            <th>Fecha creación</th>
                                            <th>Proyecto</th>
                                            <th>Versiones</th>
                                            <th>Editar</th>
                                            <th>Eliminar</th>
                                            <th>Enviar</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Id Presupuesto</th>
                                            <th>Fecha creación</th>
                                            <th>Proyecto</th>
                                            <th>Versiones</th>
                                            <th>Editar</th>
                                            <th>Eliminar</th>
                                            <th>Enviar</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% todosLosPresupuestos.forEach(function(budget){ %>
                                        <tr>
                                            <td><%= budget.id_Presupuesto %></td>
                                            <td><%= budget.fecha_creacion %></td>
                                            <td><%= budget.proyecto %></td>
                                            <td><%= budget.versiones %></td>
                                            <td><a href="/presupuestos/editPresupuesto/<%= budget.id_Presupuesto %>"><i class="fas fa-edit"></i>&nbspEditar</a></td>
                                            <td><a class="confirmDeletion" href="/admin/products/deleteProduct/<%= budget.id_Presupuesto %>"><i class="fas fa-trash-alt"></i>&nbspEliminar</a></td>
                                            <td><a href="/admin/products/editProduct/<%= budget.id_Presupuesto %>"><i class="fas fa-paper-plane"></i>&nbspEnviar</a></td>

                                           
                                        </tr>
                                        <% }); %>
                                        
                                    </tbody>
                                </table>
                                <% } else {%>
                                    <h3 class="text-center">No hay presupuestos.</h3>
                                    <% }%>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
        <script src="js/datatables-simple-demo.js"></script>
    </body>
</html>
